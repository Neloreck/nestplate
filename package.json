{
  "name": "x-core-nest-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for back-end applications.",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "npx cross-env NODE_ENV=development ts-node -P ./src/tsconfig.json -r tsconfig-paths/register src/main/application/Application.ts",
    "start:dev": "nodemon --config ./src/nodemon.json",
    "start:prod": "npx cross-env NODE_ENV=production node target/dist/application/Application.js",
    "=====": "========================================================================================================",
    "clean": "npx rimraf ./target",
    "build": "npm run clean && npm run transpile:ts && npm run transpile:babel",
    "transpile:ts": "tsc -p ./src/tsconfig.json --outdir ./target/ts-transpiled ",
    "transpile:babel": "npx babel ./target/ts-transpiled --out-dir ./target/dist --extensions \".ts,.js\" && rm -r ./target/ts-transpiled",
    "======": "=======================================================================================================",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^5.7.2",
    "@nestjs/core": "^5.7.2",
    "dotenv": "^6.2.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "rxjs": "^6.4.0",
    "typescript": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.1",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-typescript": "^7.1.0",
    "@nestjs/testing": "^5.7.2",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.6",
    "@types/node": "^11.9.4",
    "@types/supertest": "^2.0.7",
    "babel-plugin-module-resolver": "^3.1.3",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "./target/ts"
          ],
          "alias": {
            "@Application": "./target/ts-transpiled/application/",
            "@Lib": "./target/ts-transpiled/lib/",
            "@Resources": "./target/ts-transpiled/resources/"
          },
          "extensions": [
            ".js",
            ".ts"
          ]
        }
      ],
      [
        "@babel/plugin-proposal-decorators",
        {
          "decoratorsBeforeExport": true
        }
      ],
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../target/coverage",
    "testEnvironment": "node"
  }
}
