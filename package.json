{
  "name": "x-core-nest-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for back-end applications.",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "npx cross-env NODE_ENV=development ts-node -P ./src/tsconfig.json -r tsconfig-paths/register src/main/application/Application.ts",
    "start:dev": "nodemon --config ./src/nodemon.json",
    "start:prod": "npx cross-env NODE_ENV=production node target/dist/application/Application.js",
    "=====": "========================================================================================================",
    "clean": "npx rimraf ./target",
    "build": "npm run clean && npm run transpile:ts && npm run transpile:babel",
    "transpile:ts": "tsc -p ./src/tsconfig.json --outdir ./target/ts-transpiled ",
    "transpile:babel": "npx babel ./target/ts-transpiled --out-dir ./target/dist --extensions \".ts,.js\" && rm -r ./target/ts-transpiled",
    "======": "=======================================================================================================",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^6.2.4",
    "@nestjs/core": "^6.2.4",
    "@nestjs/platform-express": "^6.2.4",
    "dotenv": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "rxjs": "^6.5.2",
    "typescript": "^3.4.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@nestjs/testing": "^6.2.4",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/supertest": "^2.0.7",
    "babel-plugin-module-resolver": "^3.2.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.17.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.1",
    "ts-node": "^8.2.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.16.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "./target/ts"
          ],
          "alias": {
            "@Application": "./target/ts-transpiled/application/",
            "@Lib": "./target/ts-transpiled/lib/",
            "@Resources": "./target/ts-transpiled/resources/"
          },
          "extensions": [
            ".js",
            ".ts"
          ]
        }
      ],
      [
        "@babel/plugin-proposal-decorators",
        {
          "decoratorsBeforeExport": true
        }
      ],
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../target/coverage",
    "testEnvironment": "node"
  }
}
