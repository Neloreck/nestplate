{
  "name": "x-core-nest-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for back-end applications.",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "npm run cli start",
    "start:dev": "npm run cli start:dev",
    "start:prod": "npm run cli start:prod",
    "=====": "========================================================================================================",
    "test": "npm run cli test",
    "======": "=======================================================================================================",
    "cli": "npx ts-node --project ./cli/tsconfig.json ./cli/CliRunner.ts"
  },
  "dependencies": {
    "@nestjs/common": "^6.5.3",
    "@nestjs/core": "^6.5.3",
    "@nestjs/platform-express": "^6.5.3",
    "@nestjs/swagger": "^3.1.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "dotenv": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "swagger-ui-express": "^4.0.7",
    "rxjs": "^6.5.2",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@nestjs/testing": "^6.2.4",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/supertest": "^2.0.8",
    "babel-plugin-module-resolver": "^3.2.0",
    "colors": "^1.3.3",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.2.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.18.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "./target/ts"
          ],
          "alias": {
            "@Application": "./target/ts-transpiled/application/",
            "@Lib": "./target/ts-transpiled/lib/",
            "@Resources": "./target/ts-transpiled/resources/"
          },
          "extensions": [
            ".js",
            ".ts"
          ]
        }
      ],
      [
        "@babel/plugin-proposal-decorators",
        {
          "decoratorsBeforeExport": true
        }
      ],
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  }
}
