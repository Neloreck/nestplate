{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {
    "no-unused-expression": true
  },
  "rules": {
    "quotemark": [
      true, "double"
    ],
    "ordered-imports": [
      true
    ],
    "max-line-length": [
      true, 140
    ],
    "member-ordering": [
      true
    ],
    "interface-name": [
      true
    ],
    "array-type": [true, "generic"],
    "object-curly-spacing": [true, "always"],
    "comma-dangle": ["error", "never"],
    "semicolon": true,
    "no-empty-interface": false,
    "trailing-comma": false,
    "no-bitwise": false,
    "whitespace": [true, "check-rest-spread", "check-module"],
    "object-literal-key-quotes": [
      true, "as-needed"
    ],
    "typedef": [
      true,
      "array-destructuring",
      "arrow-call-signature",
      "arrow-parameter",
      "call-signature",
      "member-variable-declaration",
      "parameter",
      "property-declaration"
    ]
  },
  "rulesDirectory": []
}
